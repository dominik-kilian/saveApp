<p style="color: green"><%= notice %></p>

<h1>Save App - save here something you want</h1>

<div id="items" class="container-fluid mb-3">
  <table class="table">
    <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Link</th>
          <th></th>
        </tr>
    </thead>
<tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.link_to%></td>
      <td><%= link_to "Show this save", item, class: 'btn btn-dark'%></td>
    </tr>
    <% end %>
</tbody>
  </table>
</div>

<%= link_to "New save", new_item_path, class: 'btn btn-primary' %>